{
  "name": "kotipelit-backend",
  "version": "1.0.0",
  "description": "Backend for www.kotipelit.com",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production yarn build && cross-env NODE_ENV=production node dist/index.js",
    "dev": " cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "build": "tsc",
    "lint": "eslint --ext .ts .",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "postinstall": "yarn run build"
  },
  "author": "Jarkko Mämmelä",
  "license": "ISC",
  "dependencies": {
    "@types/express-jwt": "^0.0.42",
    "@types/jsonwebtoken": "^8.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^5.3.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.19",
    "morgan": "^1.10.0",
    "socket.io": "^2.3.0",
    "socketio-jwt": "^4.6.2",
    "uuid": "^8.2.0",
    "cross-env": "^7.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/mongoose": "^5.7.27",
    "@types/morgan": "^1.9.1",
    "@types/socket.io": "^2.1.8",
    "@types/socket.io-client": "^1.4.33",
    "@types/socketio-jwt": "^0.2.0",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.3.0",
    "jest": "^26.0.1",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node-dev": "^1.0.0-pre.49",
    "typescript": "^3.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
